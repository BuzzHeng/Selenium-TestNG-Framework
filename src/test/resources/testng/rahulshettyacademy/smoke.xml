<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Smoke Test Suite" verbose="1">

    <listeners>
        <listener class-name="com.buzzheng.TestComponents.TestListener"/>
    </listeners>

    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>

        <classes>
            <class name="com.buzzheng.rahulshettyacademy.SubmitOrderTest"/>
            <class name="com.buzzheng.rahulshettyacademy.ErrorValidationTest"/>
        </classes>
    </test>

</suite>